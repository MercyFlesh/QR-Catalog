<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QR_Catalog.Views.DbDetailPage"
             Title="{Binding Title}">

    <ContentPage.Behaviors>
        
    </ContentPage.Behaviors>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Command="{Binding UpdateItemCommand}" CommandParameter="{Binding .}"/>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Name:" FontSize="Medium" />
            <Label Text="{Binding Name}" FontSize="Small"/>
            <Label Text="Scheme:" FontSize="Medium" />
            <Label Text="{Binding Scheme}" FontSize="Small"/>
            <Label Text="Host:" FontSize="Medium" />
            <Label Text="{Binding Host}" FontSize="Small"/>
            <Label Text="Port:" FontSize="Medium" />
            <Label Text="{Binding Port}" FontSize="Small"/>
            <Label Text="Database:" FontSize="Medium" />
            <Label Text="{Binding Database}" FontSize="Small"/>
            <Label Text="User:" FontSize="Medium" />
            <Label Text="{Binding User}" FontSize="Small"/>
            <Label Text="Password:" FontSize="Medium" />
            <Label Text="{Binding Password}" FontSize="Small"/>
        </StackLayout>
    </ScrollView>
</ContentPage>