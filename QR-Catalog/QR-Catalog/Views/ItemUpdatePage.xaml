<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QR_Catalog.Views.ItemUpdatePage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <StackLayout Grid.Row="0">
                <Label Text="Text" FontSize="Medium"/>
                <Entry Text="{Binding Text}" FontSize="Small" VerticalOptions="Start" Margin="-4,0,30,0"/>
            </StackLayout>
            <StackLayout Grid.Row="1" Margin="0,10,0,0">
                <Label Text="Description" FontSize="Medium" VerticalOptions="Center"/>
                <Entry Text="{Binding Description}" FontSize="Small" VerticalOptions="Start" Margin="-4,0,30,0"/>
            </StackLayout>

            <StackLayout Grid.Row="2" Margin="0,20,0,0">
                <Button Text="Save" Command="{Binding SaveItemCommand}"
                     HorizontalOptions="Start" VerticalOptions="Start"  WidthRequest="80" HeightRequest="40"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>